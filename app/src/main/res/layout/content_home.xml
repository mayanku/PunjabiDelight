<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5BFBF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#444B73"
        android:scaleType="centerCrop"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@android:color/white"
        android:text="We Provide fresh and delicious food and follow all the hygiene guidelines. You can call us at 9993716592 or 7441100734"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/img"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:text="Categories"
        android:textColor="@android:color/black"
        android:id="@+id/textview_categories"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_categories"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_tandoorDishes"
                android:layout_below="@+id/img"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_tandoorDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tandoor"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/product_tandoorDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="TANDOOR (Paratha's, Thali's, Tandoor Starters)"
                    android:layout_toRightOf="@id/product_tandoorDishes_image"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_indianDishes"
                android:layout_below="@+id/r_tandoorDishes"
                android:background="@android:color/white"
                android:layout_width="match_parent"

                >

                <ImageView
                    android:id="@+id/product_indianDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/indian_thali"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/product_indianDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="INDIAN (Dhabe SE, Paneer SE, Breads/Rotis )"
                    android:layout_toRightOf="@id/product_indianDishes_image"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_chineseDishes"
                android:layout_below="@+id/r_tandoorDishes"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_chineseDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chinese"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/product_chineseDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CHINESE (SOUPS,CHINA TOWN)"
                    android:layout_toRightOf="@id/product_chineseDishes_image"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_bakeryDishes"
                android:layout_below="@+id/r_chineseDishes"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_bakeryDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bakery"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    />

                <TextView
                    android:id="@+id/product_bakeryDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BAKERY (PASTRY,CAKES,CAKES ON ORDER)"
                    android:layout_toRightOf="@id/product_bakeryDishes_image"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_ItalianDishes"
                android:layout_below="@+id/r_bakeryDishes"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_italianDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/italian"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/product_italianDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ITALIAN"
                    android:layout_toRightOf="@id/product_italianDishes_image"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_shawarmaDishes"
                android:layout_below="@+id/r_ItalianDishes"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_shawarmaDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/continental"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/product_shawarmaDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SHAWARMA"
                    android:layout_toRightOf="@id/product_shawarmaDishes_image"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="2dp"
                android:layout_margin="2dp"
                android:id="@+id/r_RiceDishes"
                android:layout_below="@+id/r_ShawarmaDishes"
                android:background="@android:color/white"
                >

                <ImageView
                    android:id="@+id/product_riceDishes_image"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/rice"
                    android:scaleType="centerCrop"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:id="@+id/product_riceDishes_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="RICE, RICE COMBOS"
                    android:layout_toRightOf="@id/product_riceDishes_image"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="italic|bold"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
</RelativeLayout>